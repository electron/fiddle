{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "dom",
      "WebWorker"
    ],
    "strict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "."
  },
  "include": ["rtl-spec/**/*", "src/**/*", "tests/**/*"],
  "exclude": ["node_modules/**/*"]
}
